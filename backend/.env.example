# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/video-summarizer
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# ============================================
# GOOGLE OAUTH
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================
# JWT SECRETS
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_your_64_byte_secret_here
JWT_REFRESH_SECRET=generate_another_64_byte_secret_here

# ============================================
# SESSION SECRET
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=generate_your_32_byte_secret_here

# ============================================
# ENCRYPTION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_your_32_byte_encryption_key_here

# ============================================
# SERVER
# ============================================
PORT=3000
NODE_ENV=development
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# ============================================
# CRON JOBS
# ============================================
ENABLE_CRON_JOBS=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS ORIGINS (comma-separated)
# ============================================
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# ============================================
# OPTIONAL: AI PROVIDERS
# ============================================
# Add your AI API keys here
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_AI_API_KEY=...

# ============================================
# IMPORTANT NOTES:
# ============================================
# 1. NEVER commit this file with real values to git
# 2. Copy this to .env and fill in your actual values
# 3. Generate all secrets using crypto.randomBytes()
# 4. Use different secrets for production
# 5. Rotate secrets regularly
